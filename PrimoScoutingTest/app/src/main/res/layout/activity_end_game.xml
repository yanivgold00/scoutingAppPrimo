<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_end_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.primo.primoscoutingtest.EndGameActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="End Game"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/title"
                android:textStyle="normal|bold"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="מי שלט במבחנה"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/midTv"
                android:layout_marginRight="60dp" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/midSquare"
                android:layout_marginLeft="-25dp"
                android:layout_marginRight="50dp" />
        </TableRow>

        <TableRow
            android:layout_height="match_parent"
            android:layout_width="match_parent">


            <Switch
                android:text="האם הגיע לריבוע שמירה"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/controlSquareSwitch" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="בחר מהירות"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/speed"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="40dp">

            <SeekBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/speedSeekBar"
                android:progressDrawable="@drawable/custom_ratingbar_selector"
                android:max="5"
                android:paddingEnd="0dip"
                android:paddingStart="0dip" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Switch
                android:text="האם תפקד כהגנה"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/didDefence" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Switch
                android:text="האם קרס"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/crashed" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="הערות"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/comments"
                android:elevation="0dp"
                android:layout_marginRight="100dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/commentText"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="-80dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:text="Send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/send" />
        </TableRow>
    </TableLayout>
</LinearLayout>
